<% logo_coche = "<i class='fa fa-check-square-o'></i> This task is completed".html_safe %>
<% logo_sans_coche = "<i class='fa fa-square-o' aria-hidden='true'></i> This task is not completed".html_safe %>

<h1> <%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? logo_coche : logo_sans_coche %></p>

<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list

<% end %><%= link_to edit_task_path(@task.id), class: 'btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this task
<% end %>
